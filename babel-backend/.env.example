# Library of Babel Backend Configuration

# Server Configuration
PORT=5570
HOST=localhost
NODE_ENV=development

# Library Mode Settings
LIBRARY_MODE=educational          # 'educational' | 'enhanced'

# Enhanced Mode Configuration (for development/testing)
ENHANCED_MODE=false               # Enable enhanced features for testing
REAL_SEARCH_API=http://localhost:5560  # External search API endpoint
DEBUG_MODE=false                  # Enable debug logging and detailed errors

# Frontend Integration
FRONTEND_URL=http://localhost:3000     # Frontend URL for CORS configuration

# Security Settings (production)
RATE_LIMIT_WINDOW=900000          # Rate limiting window (15 minutes)
RATE_LIMIT_MAX=100                # Max requests per window

# Educational Features
INCLUDE_EDUCATIONAL_NOTES=true    # Include educational context in responses
INCLUDE_PHILOSOPHICAL_QUOTES=true # Include Borges quotes and philosophy
INCLUDE_CONCEPT_EXPLANATIONS=true # Explain procedural generation concepts