# LibraryOfBabel Environment Variables Template
# Copy this file to .env and fill in your actual values

# API Keys
API_KEY=your_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/librarybabel
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=librarybabel
DATABASE_USER=username
DATABASE_PASSWORD=password

# Security
SECRET_KEY=your_secret_key_here
JWT_SECRET=your_jwt_secret_here

# External Services
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret

# Application Settings
DEBUG=false
LOG_LEVEL=info
PORT=5000

# File Paths
EBOOK_STORAGE_PATH=/path/to/ebook/storage
PROCESSED_DATA_PATH=/path/to/processed/data

# SSL Configuration (if needed)
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/key.pem